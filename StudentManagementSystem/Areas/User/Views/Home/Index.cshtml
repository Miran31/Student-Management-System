                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (!User.IsInRole(SD.Role_admin) && !User.IsInRole(SD.Role_student))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">Contract</a>
                                </li>
                            }
                            @if (User.IsInRole(SD.Role_admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Studentclass" asp-action="Index">Class</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Studentclass" asp-action="StudentIndex">Student</a>
                                </li>
                            }
                            @if (User.IsInRole(SD.Role_student))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">Student</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">Student</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">Student</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="" asp-action="Privacy">Student</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <section id="home">
