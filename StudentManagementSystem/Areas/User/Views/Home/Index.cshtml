    <style>
        body,html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            scroll-behavior: smooth;
        }

        .homesec {
            height: 90vh;
        }

        .aboutsec {
            height: 45vh;
        }

        .contactsec {
            height: 68vh;
        }

        .divmain {
            position: relative;
            overflow: hidden;
            z-index: 1;
            font-weight: 500;
        }

            .divmain::before {
                content: '';
                position: absolute;
                background-image: url('~/wwwroot/Images/Overall/Home.png');
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                background-size: cover;
                background-attachment: fixed;
                background-position: center;
                background-repeat: no-repeat;
                opacity: 0.3;
                z-index: -1;
            }

        .navbar {
            position: sticky;
            top: 0;
            left: 0;
            z-index: 999;
        }

    </style>

</head>
<body>
    <header>

        <nav class="navbar navbar-expand-md navbar-toggleable-md bg-primary border-bottom box-shadow" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
