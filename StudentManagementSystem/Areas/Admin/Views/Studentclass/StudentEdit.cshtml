@model StudentManagementSystem.Models.Viewmodel.StudentVM
@{
    ViewData["Title"] = "Update Student information";
}

<div class="container" style="height:78vh; width:auto">
    <div class="row justify-content-center align-items-center" style="height:78vh; width:auto">
        <div class="col-10">
            <div class="card bg-primary text-white rounded-3 mb-4">
                <div class="card-body text-center">
                    <div>
                        <h2 class="text-uppercase my-3 mb-5">Create Class</h2>
                        <form method="post" enctype="multipart/form-data">
                            <input asp-for="applicationUser.Id" />
                            <h3 class="text-start">Personal Details</h3>

                            <div class="card-body border-2 border-white ">
                                <div class="form-outline form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.Student_Name" type="text" class="form-control rounded-2" placeholder="Full Name" />
                                    <label asp-for="applicationUser.Student_Name" class="form-label">Full Name</label>
                                    <span asp-validation-for="applicationUser.Student_Name" class="text-danger"></span>
                                </div>
                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.Student_Email" id="email1" type="email" class="form-control" placeholder="Email" />
                                    <label asp-for="applicationUser.Student_Email" class="form-label">Email</label>
                                    <span asp-validation-for="applicationUser.Student_Email" class="text-danger"></span>
                                </div>
                                <div class=" form-floating text-primary mb-3">

                                    <select asp-for="applicationUser.StudentClassId" class="form-control" asp-items="@Model.classList" placeholder="Class">
                                        <option selected disabled>---Select Class---</option>>
                                    </select>
                                    <label asp-for="applicationUser.StudentClassId" class="form-label">Class</label>
                                    <span asp-validation-for="applicationUser.StudentClassId" class="text-danger"></span>
                                </div>
                                <div class=" form-floating text-primary mb-3">

                                    <select asp-for="applicationUser.Gender" class="form-control" placeholder="Gender">
                                        <option selected disabled>---Select Gender---</option>>
                                        <option>Male</option>>
                                        <option>Female</option>>
                                    </select>
                                    <label asp-for="applicationUser.Gender" class="form-label">Gender</label>
                                    <span asp-validation-for="applicationUser.Gender" class="text-danger"></span>
                                </div>
                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.Students_Id" type="text" class="form-control" placeholder="Student ID" />
                                    <label asp-for="applicationUser.Students_Id" class="form-label">Student ID</label>
                                    <span asp-validation-for="applicationUser.Students_Id" class="text-danger"></span>
                                </div>
                                <div class=" form-floating text-primary mb-3">
                                    <input name="file" asp-for="applicationUser.ImgUrl" type="file" class="form-control" placeholder="Image" />
                                    <label asp-for="applicationUser.ImgUrl" class="form-label">Image</label>
                                    <span asp-validation-for="applicationUser.ImgUrl" class="text-danger"></span>
                                </div>

                            </div>


                            <h3 class="text-start">Parents/Guardian's Details</h3>

                            <div class="card-body border-2 border-white ">

                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.FathersName" type="text" class="form-control" placeholder="Father's Name" />
                                    <label asp-for="applicationUser.FathersName" class="form-label">Father's Name</label>
                                    <span asp-validation-for="applicationUser.FathersName" class="text-danger"></span>
                                </div>

                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.MothersName" type="text" class="form-control" placeholder="Mother's Name" />
                                    <label asp-for="applicationUser.MothersName" class="form-label">Mother's Name</label>
                                    <span asp-validation-for="applicationUser.MothersName" class="text-danger"></span>
                                </div>

                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.Phone" type="text" class="form-control" placeholder="Contact Number" />
                                    <label asp-for="applicationUser.Phone" class="form-label">Contact Number</label>
                                    <span asp-validation-for="applicationUser.Phone" class="text-danger"></span>
                                </div>

                                <div class=" form-floating text-primary mb-3">
                                    <input asp-for="applicationUser.GuardianAddress" type="text" class="form-control" placeholder="Address" />
                                    <label asp-for="applicationUser.GuardianAddress" class="form-label">Address</label>
                                    <span asp-validation-for="applicationUser.GuardianAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-lg btn-secondary">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    @{
        <script>
            document.getElementById('email1').addEventListener('input', function () {
                document.getElementById('email2').value = this.value;
            });
        </script>
        <partial name="_ValidationScriptsPartial" />
    }
}