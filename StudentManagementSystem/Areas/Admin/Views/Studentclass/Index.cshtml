@model List<StudentClass>
@{
    ViewData["Title"] = "Class List";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h3>Class List</h3>
                </div>
                <div class="col-6 text-end"> 
                    <a class="btn btn-outline-primary rounded-4" asp-action="Create" asp-area="Admin" asp-controller="Studentclass"><i class="fa-solid fa-circle-plus"></i> Create New Class</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped text-center">
                <tr>
                    <th>Session</th>
                    <th>Year</th>
                    <th>Semester</th>
                    <th>Action</th>
                </tr>
                @foreach(var i in Model)
                {
                    <tr>
                        <td>@i.Session</td>
                        <td>@i.Year</td>
                        <td>@i.Semester</td>
                        <td>
                            <a asp-action="Edit" asp-area="Admin" asp-controller="Studentclass" asp-route-id="@i.StudentClassId" class="btn btn-success">Edit</a>
                            <form method="post" class="d-inline-flex">
                                <button asp-area="Admin" asp-action="Delete" asp-controller="Studentclass" asp-route-id="@i.StudentClassId" class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>